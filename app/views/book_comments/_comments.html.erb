<% book.book_comments.each do |book_comment| %>
  <p><%= image_tag book_comment.user.get_profile_image(50,50) %>
  <%= book_comment.user.name %>
  <%= book_comment.created_at.strftime('%Y/%m/%d') %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
    <%= link_to book_book_comment_path(book_comment.book, book_comment), class: "btn btn-danger", method: :delete do %><!--remote: true追加-->
      <i class="button"></i>
        Destroy
    <% end %>
  <% end %>
  </p>
<% end %>

<p><%= form_with(model:[book, book_comment], local: false) do |f| %>
<%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "w-100" %><!--←class横幅の指定-->
<%= f.submit "送信する" %>
<% end %>
</p>
